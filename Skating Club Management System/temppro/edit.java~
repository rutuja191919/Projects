  public void actionPerformed (ActionEvent e3)
  {
if(e3.getSource()==submit)
{
 
if (fnam.getText ().equals ("")  || adrs.getText ().equals ("") || pno.getText ().equals ("") || cono.getText ().equals ("")  || mail.getText ().equals ("") ) 
	     {
		
